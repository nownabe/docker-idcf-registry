[Unit]
Description=idcf-registry
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill registry
ExecStartPre=-/usr/bin/docker rm registry
ExecStartPre=/usr/bin/docker pull registry
ExecStart=/usr/bin/docker run --name registry -e "REGISTRY_BUCKET=${YOUR_BUCKET}" -e "AWS_ACCESS_KEY_ID=${YOUR_ACCESS_KEY}" -e "AWS_SECRET_ACCESS_KEY=${YOUR_SECRET_KEY}" -p 5000:5000 registry

[Install]
WantedBy=multi-user.target

